<h1>Products</h1>
<% @products.each do |product| %>
  <h3><%= product.name %><%= product.id %></h3>
  <div id="product-<%= product.id %>"><%= truncate(product.description) %></div>
  <div id="order-<%= product.id %>"></div>
  <div id="date-<%= product.id %>"></div>
  <button class="js-more" data-id="<%= product.id %>">More Info</button>
<% end %>

<script type="text/javascript" charset="utf-8">
$(function() {
  $(".js-more").on("click", function() {
    let id = $(this).data("id");
    $.get("/products/" + id + ".json", function(json) {
      let inventoryText = "<strong>Available</strong>";
      if(json['inventory'] < 1){
        inventoryText = "<strong>Sold Out</strong>";
      }
      let descriptionText = "<p>" + json['description'] + "</p><p>" + inventoryText + "</p>";
      $("#product-" + id).html(descriptionText);

      let orderText = '';
      let orderDate = '';
      for (let i = 0; i < json['orders'].length; i++) {
        orderText += "<p>Order ID:" + json['orders'][i]['id'] + "</p>"
        orderDate += "<p>Order Date:" + json['orders'][i]['created_at'] + "</p>"
      }

      $('#order-' + id).html(orderText);
      $('#date-' + id).html(orderDate);
    });
  });
});
</script>
