<h1>Products</h1>
<% @products.each do |product| %>
  <h3><%= product.name %></h3>
  <div id="product-<%= product.id %>"><%= truncate(product.description) %></div>
  <button id="<%= product.id %>" class="js-more" data-id="<%= product.id %>">More Info <%= product.id %></button>
<% end %>

<script type="text/javascript" charset="utf-8">
$(function() {
  $(".js-more").on("click", function() {
    let descriptionText = "<p>Orders:<br>"
    var id = $(this).data("id");
    $.getJSON("/products/" + id + ".json", function(product) {
      product.orders.forEach(function(order) {
        descriptionText += `Order ${order['id']} created at ${order['created_at']}<br> `
      })

      descriptionText += "</p>"

      var inventoryText = "<strong>Available</strong>";
      if(product.inventory < 1){
        inventoryText = "<strong>Sold Out</strong>";
      }
      descriptionText += "<p>" + product['id'] + "<br>" + product['name'] 
      + "<br>" + `${product.description}` + "</p><p>" + inventoryText + "</p>";
      $("#product-" + id).html(descriptionText);
    });
  });
});
</script>
